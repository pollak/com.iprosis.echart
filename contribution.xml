<?xml version="1.0" encoding="UTF-8"?>
<sdkExtension
	xmlns="http://www.sap.com/bi/zen/sdk"
	id="com.iprosis.echart"
	title="Design Studio SDK Extension ECHART Components"
	version="1.0"
	vendor="iprosis">
	<group id="iProsis" title="iProsis Custom Components"/>
	<component
		id="Gauge"
		title="Gauge"
		icon="res/gauge.png"
		handlerType="div"
		group="iProsis"
		propertySheetPath="res/additional_properties_sheet/additional_properties_sheet.html"
		databound="true">
		<jsInclude>res/js/echarts-all.js</jsInclude>
		<jsInclude>res/js/component.js</jsInclude>
		<cssInclude>css/component.css</cssInclude>
		<property id="TickValue" 	title="Tick - Value" 		type="float"		group="Layout" 		bindable="true" />
		<property id="TickValueVisible" 		title="TickValue - Visible"			type="boolean"		group="Layout"/>
		<property id="Min" 			title="Min" 			   	type="float"		group="layout" 		bindable="true" />
		<property id="Max" 			title="Max" 				type="float"		group="layout"		bindable="true"	/>
		<property id="MaxMinDecimal" 			title="MaxMin Decimal Places" 				type="int"		group="layout"		bindable="true"	/>
		<property id="Color1" 		title="Color1"				type="Color"		group="Layout"		visible="false"/>
		<property id="Color2" 		title="Color2"  			type="Color"		group="Layout"		visible="false"/>
		<property id="Color3" 		title="Color3"  			type="Color"		group="Layout"		visible="false"/>
		<property id="Value1" 		title="Value1"				type="float"		group="Layout"		visible="false"/>
		<property id="Value2" 		title="Value2"  			type="float"		group="Layout"		visible="false"/>
		<property id="Thick" 		title="Thick - Width"		type="int"			group="Layout"/>
		<property id="ValueDesc" 	title="Value Description"	type="String"		group="Layout" 		visible="false"/>
		<property id="StartAngle" 	title="StartAngle"			type="float"		group="Layout"/>		
		<property id="EndAngle" 	title="EndAngle"			type="float"		group="Layout"/>
		<property id="onChange"		title="On Change" 			type="ScriptText"	group="Events"/>
		<property id="Sign" 		title="Sign"				type="String"		group="Layout"/>
		<property id="TickValueFontSize" 		title="Tick Value-Font Size"		type="float"		group="Layout"/>
		<property id="TickValueFontFamily" 		title="Tick Value-Font Family"		type="String"		group="Layout"/>
		<property id="SplitNumber" 				title="Split Number" 				type="int"			group="Layout"/>
		<property id="SplitLineVisible" 		title="SplitLine - Visible"			type="boolean"		group="Layout"/>
		<property id="SplitLineColor" 			title="SplitLine- Color"			type="Color"		group="Layout"/>
		<property id="SplitLineWidth" 			title="SplitLine- Width"			type="float"		group="Layout"/>
		<property id="PointerLength" 			title="Pointer Length"				type="String"		group="Layout"/>
		<property id="PointerWidth" 			title="Pointer width"				type="float"		group="Layout"/>
		<property id="PointerColor" 			title="Pointer color"				type="Color"		group="Layout"/>
		<property id="TooltipVisible" 			title="Tooltip Visible"				type="boolean"		group="Layout"/>
		<property id="Rangevalues"	 			title="Rangevalues"					type="String"		group="Layout" visible="false"/>
		<property id="ColorNum"	 				title="ColorNum"					type="int"		group="Layout" visible="false"/>

		<initialization>
			<defaultValue property="Width">400</defaultValue>
			<defaultValue property="HEIGHT">400</defaultValue>
			<defaultValue property="StartAngle">90</defaultValue>
			<defaultValue property="EndAngle">-180</defaultValue>
			<defaultValue property="Min">0</defaultValue>
			<defaultValue property="Max">100</defaultValue>
			<defaultValue property="Sign">%</defaultValue>
			<defaultValue property="TickValue">56</defaultValue>
			<defaultValue property="TickValueFontSize">30</defaultValue>
			<defaultValue property="TickValueFontFamily">Arial</defaultValue>
			<defaultValue property="Thick">6</defaultValue>
			<defaultValue property="SplitNumber">1</defaultValue>
			<defaultValue property="SplitLineVisible">true</defaultValue>
			<defaultValue property="SplitLineColor">#C0C0C0</defaultValue>
			<defaultValue property="SplitLineWidth">2</defaultValue>
			<defaultValue property="PointerLength">80%</defaultValue>
			<defaultValue property="PointerWidth">4</defaultValue>
			<defaultValue property="PointerColor">red</defaultValue>
			<defaultValue property="TooltipVisible">true</defaultValue>
			<defaultValue property="TickValueVisible">true</defaultValue>
			<defaultValue property="Color1">#FF0000</defaultValue>
			<defaultValue property="Color2">#FFEE00</defaultValue>
			<defaultValue property="Color3">#00DF00</defaultValue>
			<defaultValue property="Value1">0.3</defaultValue>
			<defaultValue property="Value2">0.6</defaultValue>
			<defaultValue property="MaxMinDecimal">1</defaultValue>
			<defaultValue property="ColorNum">2</defaultValue>
			<defaultValue property="Rangevalues">[[0.1,"red"],[1,"blue"]]</defaultValue>
			
			
		</initialization>
	</component>
</sdkExtension>